<div id="quickshop" class="modal-hide quickshop-modal">
  <div class="js-quickshop quickshop">

  </div>
</div>

<script type="text/template" data-template-id="quickshop">
<form class="" action="{{ cart_url }}" method="post" data-product-id="<%= id %>" data-recently-view="<%= id %>" data-main-form data-product-gallery=".js-product-gallery-main">
  <h1 class="product-title"><a href="<%= url %>"><%= title %></a></h1>

  <div class="product-prices">
    <% if (variants[0].old_price){ %>
    <div class="product-old_price"><%= Shop.money.format(variants[0].old_price) %></div>
    <% } %>
    <div class="product-price">
      <span class="js-product-price"><%= Shop.money.format( variants[0].price ) %></span>
    </div>
  </div>

  <% if (variants.length > 1){ %>
    <select name="variant_id" data-product-variants>
      <% _.forEach(variants, function (variant){ %>
      <option value="<%= variant.id %>"><%= variant.title %></option>
      <% }) %>
    </select>
  <% }else{ %>
    <input type="hidden" name="variant_id" value="<%= variants[0].id %>" >
  <% } %>

  <div class="product-buy">
    <div class="counter js-variant-counter" data-quantity>
      <button type="button" data-quantity-change="-1" class="counter-button is-count-down"></button>
      <input type="text" value="1" name="quantity" class="counter-input"/>
      <button type="button" data-quantity-change="1" class="counter-button is-count-up"></button>
    </div>
    <button type="submit" data-item-add class="button is-primary in-product">{{ messages.button_to_cart }}</button>
  </div>      
</form>
</script>