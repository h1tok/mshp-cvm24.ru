{% include "preimushchestva" %}
{% include "product_tabs" %}
{% comment %}
<div id="product-comment">
  <div class="product-comment-header">
      <div class="title">{{ messages.label_reviews }}</div>
      <button type="button" class="button is-reviews-toggle is-unchecked js-reviews-toggle">
        <span class="button-text">{{ messages.button_review }}</span>
      </button>
      {% include 'comment_list', comments_list: product.reviews, moderated: account.reviews_moderated? %}
  </div>
  {% include "product_reviews" %}
</div><!-- /#product-comment -->
{% endcomment %}

<div id="related_products">
{% include "product_slider", slider_products: product.related_products, slider_class: 'related-products', slider_heading: messages.related_products%}
</div>
<div id="similar_products">
{% include "product_slider", slider_products: product.similar_products, slider_class: 'similar-products', slider_heading: messages.similar_products %}
</div>

